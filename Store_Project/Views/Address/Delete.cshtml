@model AddressModel
@{
    ViewBag.Subtitle = "Address deletion";
    var customer = ViewBag.Customer as CustomerModel;

}

<h1 class="text-primary">@ViewBag.Subtitle</h1>
<hr>
<h4>Would you like to remove the address
    <span class="text-danger">@Model.FullAddress</span>?</h4>

<form asp-action="Delete" class="w-25">
    <input type="hidden" asp-for="@Model.IdAddress">
    <input type="hidden" asp-for="@customer.IdUser" name="IdUser">
    <div class="mt-3">
        <a asp-action="Index" asp-route-cid="@customer.IdUser" class="btn btn-success">Back</a>
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>
</form>