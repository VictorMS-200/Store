@model ProductModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitle = "Updating product";
    }
    else
    {
        ViewBag.Subtitle = "Create a product";
    }
}

<h1 class="text-primary">@ViewBag.Subtitle</h1>
<hr>

<form asp-action="Register" class="row">
    <input type="hidden" asp-for="@Model.IdProduct">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Name">Name:</label><br>
        <input asp-for="@Model.Name" class="form-control" autofocus>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdCategory">Category:</label><br>
        <select asp-for="@Model.IdCategory" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categories">

        </select>
        <span asp-validation-for="@Model.IdCategory" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-4 col-lg-2">
        <label asp-for="@Model.Stock">Stock:</label><br>
        <input asp-for="@Model.Stock" class="form-control" autofocus>
        <span asp-validation-for="@Model.Stock" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4 col-lg-2">
        <label asp-for="@Model.Price">Price:</label><br>
        <input asp-for="@Model.Price" class="form-control" autofocus>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>