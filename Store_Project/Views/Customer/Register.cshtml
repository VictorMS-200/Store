@model CustomerModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitle = "Updating customer";
    }
    else
    {
        ViewBag.Subtitle = "Create a customer";
    }
}

<h1 class="text-primary">@ViewBag.Subtitle</h1>
<hr>

<form asp-action="Register" class="row">
    <input type="hidden" asp-for="@Model.IdUser">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Name">Full Name:</label><br>
        <input asp-for="@Model.Name" class="form-control" autofocus>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.CPF">CPF:</label><br>
        <input asp-for="@Model.CPF" class="form-control">
        <span asp-validation-for="@Model.CPF" class="text-danger"></span>
    </div>

    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.DateBirth">Date of Birth :</label><br>
        <input asp-for="@Model.DateBirth" class="form-control" type="date">
        <span asp-validation-for="@Model.DateBirth" class="text-danger"></span>
    </div>
    
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Email">Email:</label><br>
        <input asp-for="@Model.Email" class="form-control" type="email">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class="w-100"></div>
        <div class="form-group col-sm-8 col-lg-4">
            <label asp-for="@Model.Password">Password:</label><br>
            <input asp-for="@Model.Password" class="form-control" type="password">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    }
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>