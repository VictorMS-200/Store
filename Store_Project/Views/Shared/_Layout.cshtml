@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var currentController = ViewContext.RouteData.Values["controller"]!.ToString();
    var classHome = currentController == "Home" ? "active" : "";
    var classProducts = currentController == "Product" ? "active" : "";
    var classCategory = currentController == "Category" ? "active" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>StoreWeb :: @ViewBag.Subtitle</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link @classHome" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link @classProducts" asp-controller="Product" asp-action="Index">Products</a>
                    <a class="nav-link @classCategory" asp-controller="Category" asp-action="Index">Category</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        StoreWeb&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>
</html>